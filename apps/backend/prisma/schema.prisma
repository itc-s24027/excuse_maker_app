generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid(7)) @db.VarChar(36)
  uid       String   @unique @db.VarChar(128)
  email     String   @unique @db.VarChar(254)
  nickname  String?  @db.VarChar(512)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  chats Chat[]
  likes Like[]
}

model Chat {
  id        String   @id @default(uuid(7)) @db.VarChar(36)
  userId    String   @db.VarChar(36) //FK
  title     String?  @db.VarChar(255)
  createdAt DateTime @default(now())
  isShared  Boolean  @default(false)
  isDeleted Boolean  @default(false)

  // リレーション
  user User @relation(fields: [userId], references: [id])

  excuses Excuse[]
}

model Excuse {
  id         String   @id @default(uuid(7)) @db.VarChar(36)
  chatId     String   @db.VarChar(36) //FK
  situation  String   @db.Text
  excuseText String   @db.Text
  success    Boolean?
  createdAt  DateTime @default(now())
  isDeleted  Boolean  @default(false)

  // リレーション
  chat  Chat        @relation(fields: [chatId], references: [id])
  tags  ExcuseTag[]
  likes Like[]
}

model Tag {
  id        String   @id @default(uuid(7)) @db.VarChar(36)
  title     String   @unique @db.VarChar(36)
  createdAt DateTime @default(now())

  // リレーション
  excuses ExcuseTag[]
}

model ExcuseTag {
  excuseId String @db.VarChar(36) //FK
  tagId    String @db.VarChar(36) //FK

  // リレーション
  excuse Excuse @relation(fields: [excuseId], references: [id])
  tag    Tag    @relation(fields: [tagId], references: [id])

  @@id([excuseId, tagId]) //複合主キー
}

model Like {
  id        String   @id @default(uuid(7)) @db.VarChar(36)
  userId    String   @db.VarChar(36) //FK
  excuseId  String   @db.VarChar(36) //FK
  createdAt DateTime @default(now())
  isDeleted Boolean  @default(false)

  // リレーション
  user   User   @relation(fields: [userId], references: [id])
  excuse Excuse @relation(fields: [excuseId], references: [id])

  @@unique([userId, excuseId])
}
